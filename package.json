{
  "name": "vue-drag-builder",
  "version": "1.0.0",
  "description": "零配置的Vue3可视化开发平台",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && node scripts/start-electron.js\"",
    "electron:build": "vite build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "keywords": [
    "vue",
    "visual-builder",
    "electron",
    "low-code"
  ],
  "author": "professor-lee",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "async-validator": "^4.2.5",
    "element-plus": "^2.5.0",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.0.0",
    "pinia": "^2.1.7",
    "sortablejs": "^1.15.1",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@babel/parser": "^7.23.6",
    "@iconify-json/ep": "^1.1.15",
    "@rushstack/eslint-patch": "^1.3.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/compiler-dom": "^3.4.0",
    "@vue/compiler-sfc": "^3.4.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "recast": "^0.23.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "^0.18.1",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.vuedragbuilder.app",
    "productName": "VueDrag Builder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
